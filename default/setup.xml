<setup>
  <block title="Tenable Attack Surface Management â€“ Setup">

    <!-- ========================= -->
    <!-- Authentication -->
    <!-- ========================= -->

    <input type="password">
      <label>ASM API Key</label>
      <name>asm_api_key</name>
      <help>Enter your Tenable Attack Surface Management API key.</help>
    </input>

    <!-- ========================= -->
    <!-- Target Index -->
    <!-- ========================= -->

    <input type="text">
      <label>Target Index</label>
      <name>asm_index</name>
      <default>security_tenable_asm</default>
      <help>Splunk index where ASM data will be stored.</help>
    </input>

    <!-- ========================= -->
    <!-- Proxy Configuration -->
    <!-- ========================= -->

    <block title="Proxy Configuration (Optional)">

      <input type="checkbox">
        <label>Enable Proxy</label>
        <name>proxy_enabled</name>
        <default>false</default>
      </input>

      <input type="text">
        <label>Proxy Scheme</label>
        <name>proxy_scheme</name>
        <help>http or https</help>
      </input>

      <input type="text">
        <label>Proxy Host</label>
        <name>proxy_host</name>
        <help>Proxy hostname or IP.</help>
      </input>

      <input type="text">
        <label>Proxy Port</label>
        <name>proxy_port</name>
        <help>Proxy port.</help>
      </input>

      <input type="text">
        <label>Proxy Username</label>
        <name>proxy_username</name>
        <help>Optional proxy username.</help>
      </input>

      <input type="password">
        <label>Proxy Password</label>
        <name>proxy_password</name>
        <help>Optional proxy password.</help>
      </input>

      <button>
        <label>Test Proxy Connectivity</label>
        <endpoint>/services/asm/proxy/test</endpoint>
      </button>

    </block>

    <!-- ========================= -->
    <!-- Authentication Test -->
    <!-- ========================= -->

    <button>
      <label>Test ASM API Authentication</label>
      <endpoint>/services/asm/auth/test</endpoint>
    </button>

    <!-- ========================= -->
    <!-- Component Selection -->
    <!-- ========================= -->

    <block title="ASM Components to Ingest">

      <input type="checkbox">
        <label>Assets</label>
        <name>enable_assets</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>Inventories</label>
        <name>enable_inventories</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>Suggestions</label>
        <name>enable_suggestions</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>Alerts</label>
        <name>enable_alerts</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>Subscriptions</label>
        <name>enable_subscriptions</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>TXT Records</label>
        <name>enable_txt_records</name>
        <default>false</default>
      </input>

      <input type="checkbox">
        <label>Activity Logs</label>
        <name>enable_activity_logs</name>
        <default>false</default>
      </input>

    </block>

    <!-- ========================= -->
    <!-- Save Configuration -->
    <!-- ========================= -->

    <button>
      <label>Save Configuration</label>
      <endpoint>/services/asm/config/save</endpoint>
    </button>

  </block>
</setup>
